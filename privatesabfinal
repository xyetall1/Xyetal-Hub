-- Misc Tab
local miscPage = createTab("Misc", 3)

-- WalkSpeed Toggle
local walkSpeedToggle = Instance.new("TextButton")
walkSpeedToggle.Size = UDim2.new(0, 220, 0, 50)
walkSpeedToggle.Position = UDim2.new(0.5, -110, 0.25, 0)
walkSpeedToggle.BackgroundColor3 = Color3.fromRGB(70, 130, 255)
walkSpeedToggle.Text = "WalkSpeed: OFF"
walkSpeedToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
walkSpeedToggle.Font = Enum.Font.GothamBold
walkSpeedToggle.TextSize = 16
walkSpeedToggle.Parent = miscPage
Instance.new("UICorner", walkSpeedToggle).CornerRadius = UDim.new(0, 8)

local wsEnabled = false
local desiredSpeed = 50

walkSpeedToggle.MouseButton1Click:Connect(function()
	wsEnabled = not wsEnabled
	walkSpeedToggle.Text = wsEnabled and "WalkSpeed: ON" or "WalkSpeed: OFF"
	walkSpeedToggle.BackgroundColor3 = wsEnabled and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(70, 130, 255)

	if wsEnabled then
		task.spawn(function()
			while wsEnabled do
				if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
					player.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = desiredSpeed
				end
				task.wait(0.1)
			end
		end)
	else
		if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
			player.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = 16
		end
	end
end)

-- Noclip Toggle
local noclipToggle = Instance.new("TextButton")
noclipToggle.Size = UDim2.new(0, 220, 0, 50)
noclipToggle.Position = UDim2.new(0.5, -110, 0.55, 0)
noclipToggle.BackgroundColor3 = Color3.fromRGB(70, 130, 255)
noclipToggle.Text = "Noclip: OFF"
noclipToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
noclipToggle.Font = Enum.Font.GothamBold
noclipToggle.TextSize = 16
noclipToggle.Parent = miscPage
Instance.new("UICorner", noclipToggle).CornerRadius = UDim.new(0, 8)

local noclipEnabled = false
local function noclipOn()
	RunService.Stepped:Connect(function()
		if noclipEnabled and player.Character then
			for _, part in pairs(player.Character:GetChildren()) do
				if part:IsA("BasePart") and part.CanCollide == true then
					part.CanCollide = false
				end
			end
		end
	end)
end
noclipOn()

noclipToggle.MouseButton1Click:Connect(function()
	noclipEnabled = not noclipEnabled
	noclipToggle.Text = noclipEnabled and "Noclip: ON" or "Noclip: OFF"
	noclipToggle.BackgroundColor3 = noclipEnabled and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(70, 130, 255)
end)

-- Restore from minimized
restoreButton.MouseButton1Click:Connect(function()
	main.Visible = true
	minimizedFrame.Visible = false
end)

-- Minimize
minimizeButton.MouseButton1Click:Connect(function()
	main.Visible = false
	minimizedFrame.Visible = true
end)

-- Close
closeButton.MouseButton1Click:Connect(function()
	gui:Destroy()
end)
